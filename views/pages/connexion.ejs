<section class="login">
  <h1>Connexion</h1>
  <form action="" id="login-form">
    <input type="hidden" id="api-url" value="<%= typeof API_URL !== 'undefined' ? API_URL : '' %>">

    <div class="form-group"> <label for="email">Email</label>
      <input type="text" name="email" id="email" autocomplete="current-username">
      <span class="error" data-error="email"></span>
    </div>


    <div class="form-group"> <label for="password">Passsword</label>
      <input type="password" name="password" id="password" autocomplete="current-password">
      <span class="error" data-error="password"></span>
    </div>


    <div id="verify-msg"></div>

    <button type="submit">Se connecter</button>


    <p class="register-link">Pas encore de compte ? <a href="/inscription"> Inscrivez-vous ici</a></p>

  </form>

</section>